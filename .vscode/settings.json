{
	"tslint.alwaysShowRuleFailuresAsWarnings": true,
	"editor.formatOnSave": true,
	"editor.autoIndent": true,
	"editor.quickSuggestions": true,
	"editor.tabSize": 4,
	"prettier.useTabs": true,
	"prettier.tabWidth": 4,
	"prettier.singleQuote": true,
	"prettier.eslintIntegration": true,
	"material-icon-theme.folders.associations": {
		"module": "font",
		"component": "components",
		"doc": "markdown",
		"animation": "delta",
		"guard": "ngrx-effects",
		"directive": "ngrx-actions",
		"interceptor": "middleware",
		"validator": "coverage",
		"e2e": "test"
	},
	"material-icon-theme.files.associations": {
		"*.animation.ts": "purescript"
	},
	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
		"node_modules": true,
		"coverage": true
	},
	"travis.repository": "loreplotter",
	"docthis.authorName": "AlexAegis",
	"docthis.includeTypes": false,
	"docthis.includeMemberOfOnClassMembers": false,
	"search.usePCRE2": true,
	"terminal.integrated.windowsEnableConpty": true,
	"editor.codeActionsOnSave": {
		"source.fixAll": true
	},
	"plantuml.diagramsRoot": "docs/",
	"plantuml.exportOutDir": "dist/"
}
